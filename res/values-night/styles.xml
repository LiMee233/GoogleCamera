<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="CameraListPreferenceStyle" parent="@android:style/Theme.DeviceDefault.Dialog.Alert">
        <item name="android:buttonBarPositiveButtonStyle">@style/CameraDialogButtonStyle</item>
        <item name="android:buttonBarNegativeButtonStyle">@style/CameraDialogButtonStyle</item>
        <item name="colorAccent">@color/settings_accent_color</item>
    </style>
    <style name="Theme.AppCompat.DayNight" parent="@style/Theme.AppCompat" />
    <style name="Theme.CameraSettings" parent="@style/Theme.GoogleMaterial.DayNight.NoActionBar">
        <item name="android:textColorPrimary">@color/settings_text_primary_color</item>
        <item name="android:textColorSecondary">@color/settings_tint_color</item>
        <item name="android:windowBackground">?colorPrimary</item>
        <item name="android:preferenceCategoryStyle">@style/PreferenceCategoryStyle</item>
        <item name="android:preferenceStyle">@style/PreferenceStyle</item>
        <item name="android:textColor">@color/settings_text_primary_color</item>
        <item name="android:tint">@color/settings_tint_color</item>
        <item name="android:divider">#1edadce0</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:alertDialogTheme">@style/CameraListPreferenceStyle</item>
        <item name="android:colorControlActivated">?colorAccent</item>
        <item name="android:navigationBarColor">?colorPrimary</item>
        <item name="android:windowLightNavigationBar">false</item>
        <item name="colorAccent">@color/settings_accent_color</item>
        <item name="colorPrimary">@color/settings_background_color</item>
        <item name="colorPrimaryDark">?colorPrimary</item>
    </style>
    <style name="Theme.GoogleMaterial.DayNight.NoActionBar" parent="@style/Theme.GoogleMaterial.Dark.NoActionBar" />
</resources>
